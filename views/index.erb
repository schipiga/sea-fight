<!Doctype>
<html>
<head>
<title>
  Sea Buttle
</title>
<script src="http://www.html5canvastutorials.com/libraries/kinetic-v4.3.3-beta.js"></script>
<script src='/js/libs/underscore-min.js'></script>
</head>
<body>
  Sea buttle will be here
  <div id='my_ships'></div>
  <script>
    var stage = new Kinetic.Stage({
      container: 'my_ships',
      width: 500,
      height: 500
    });

    var layer = new Kinetic.Layer();

    var txt = new Kinetic.Text({
      width: 50,
      height: 50,
      align: 'center',
      fontSize: 20,
      fontFamily: 'Calibri',
      fill: 'black'
    });

    var rect = new Kinetic.Rect({
      x: 0,
      y: 0,
      width: 400,
      height: 400,
      fill: 'yellow',
      offset: {
        x: -50,
        y: -50
      },
      strokeWidth: 1,
      stroke: 'black'
    });

    _.each([1, 2, 3, 4, 5, 6, 7, 8, 9],
      function(num){
        txt.setY(0);
        txt.setX(50 + 40 * (num - 1));
        txt.setText(num);
        layer.add(txt);
    });
    layer.add(rect);
    stage.add(layer);
  </script>
</body>
</html>
